{{#extends 'base'}}
{{#block 'content'}}
<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
        </tr>
    </thead>
    {{#each categories}}
        <tr>
            <td>{{this.category_id}}</td>
            <td>{{this.name}}</td>
            <td>
                <a href="/categories/{{this.category_id}}/update" class="btn btn-primary btn-sm">Update</a>
            </td>
             <td>
                <a href="/categories/{{this.category_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    {{/each}}
</table>
    
{{/block}}

